{
  "name": "spritesheet-generator",
  "version": "1.0.0",
  "description": "A modern spritesheet generator with Discord-like UI",
  "type": "commonjs",
  "main": "public/electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "start": "electron .",
    "electron-dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.spritesheet.generator",
    "productName": "Spritesheet Generator",
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/electron.cjs",
      "src/preload.js"
    ],
    "extraMetadata": {
      "main": "public/electron.cjs"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/logo.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/logo.png"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.19",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@fluentui/react": "^8.122.16",
    "canvas": "^3.1.0",
    "electron-store": "^10.0.1",
    "framer-motion": "^12.9.4",
    "gifencoder": "^2.0.1",
    "lucide-react": "^0.503.0",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.6.1",
    "sharp": "^0.34.1"
  }
}
